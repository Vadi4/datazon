				.footer-right
					+b('a')(href='#').logo
						+e('img')(src="../img/logo-footer.svg").img
					.row.mobile-footer-row
						.col-auto
							a(href="#" class="social-network")
								+svg-icon('facebook')
						.col-auto
							a(href="#" class="social-network")
								+svg-icon('linkedin')
						.col-auto
							a(href="#" class="social-network")
