.send-email
	margin-bottom 23px
	position relative
	padding-right 10px
	&__input
		// font-size 18px
		font-size 16px
		height 50px
		font-weight 400
		border 1px
		border-radius 3px 0 0 3px
		width 100%
		background-color #fff
		padding 14px 0 14px 18px
		position relative
		clip-path polygon(0 100%, 0 0, 100% 0, 90% 100%)
		placeholder(rgba(45, 45, 45, .5))
